<?xml version="1.0"?>
<sdf version="1.8">
  <model name="my_robot" canonical_link="chassis">
    <pose>0 0 0 0 0 0</pose>

<link name='chassis'>
        <pose relative_to='__model__'>0.5 0 0.1 0 0 0</pose>
        <inertial>
          <mass>3</mass>
          <inertia>
            <ixx>0.126164</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.416519</iyy>
            <iyz>0</iyz>
            <izz>0.481014</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <box>
              <size>0.2 0.23 0.006</size>
            </box>
          </geometry>
          <material>
            <ambient>0.0 0.0 1.0 1</ambient>
            <diffuse>0.0 0.0 1.0 1</diffuse>
            <specular>0.0 0.0 1.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <!-- collision важна для реакций физики (сталкивание с объектами) -->
          <geometry>
            <box>
              <size>0.2 0.16 0.006</size>
            </box>
          </geometry>
        </collision>
      </link>

      <!--
        Левое колесо (left_wheel).
        pose relative_to='chassis' -> 0.05 м вперёд, 0.10 м вправо, 
        поворот -1.5707 рад (примерно -90 градусов) вокруг оси X, 
        чтобы цилиндр лежал в нужной плоскости.
      -->
      <link name='left_wheel'>
        <pose relative_to="chassis">0.05 0.10 0 -1.5707 0 0</pose>
        <inertial>
          <mass>0.2</mass>
          <inertia>
            <ixx>0.145833</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.145833</iyy>
            <iyz>0</iyz>
            <izz>0.125</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <cylinder>
              <radius>0.03</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>1.0 0.0 0.0 1</ambient>
            <diffuse>1.0 0.0 0.0 1</diffuse>
            <specular>1.0 0.0 0.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.03</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!--
        Правое колесо (right_wheel).
        Аналогично левому, только y=-0.10.
      -->
      <link name='right_wheel'>
        <pose relative_to="chassis">0.05 -0.10 0 -1.5707 0 0</pose>
        <inertial>
          <mass>0.2</mass>
          <inertia>
            <ixx>0.145833</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.145833</iyy>
            <iyz>0</iyz>
            <izz>0.125</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <cylinder>
              <radius>0.03</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>1.0 0.0 0.0 1</ambient>
            <diffuse>1.0 0.0 0.0 1</diffuse>
            <specular>1.0 0.0 0.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <cylinder>
              <radius>0.03</radius>
              <length>0.02</length>
            </cylinder>
          </geometry>
        </collision>
      </link>

      <!--
        frame "caster_frame" привязан к шасси (chassis). 
        Это точка, к которой затем крепится link caster (шарообразная опора).
      -->
      <frame name="caster_frame" attached_to='chassis'>
        <pose>-0.07 0 -0.01 0 0 0</pose>
      </frame>

      <!--
        Кастер (caster) - задний опорный шарик. 
        Расположен на frame="caster_frame". 
        Масса, инерция - условные.
      -->
      <link name='caster'>
        <pose relative_to='caster_frame'/>
        <inertial>
          <mass>0.5</mass>
          <inertia>
            <ixx>0.1</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.1</iyy>
            <iyz>0</iyz>
            <izz>0.1</izz>
          </inertia>
        </inertial>
        <visual name='visual'>
          <geometry>
            <sphere>
              <radius>0.015</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>0.0 1 0.0 1</ambient>
            <diffuse>0.0 1 0.0 1</diffuse>
            <specular>0.0 1 0.0 1</specular>
          </material>
        </visual>
        <collision name='collision'>
          <geometry>
            <sphere>
              <radius>0.02</radius>
            </sphere>
          </geometry>
        </collision>
      </link>

      <!--
        floor1 - "первый этаж" (промежуточная платформа),
        поднят над шасси на 0.065 м.
        Масса и габариты - условные.
      -->
      <link name="floor1">
        <pose relative_to="chassis">0 0 0.065 0 0 0</pose>
        <inertial>
          <mass>3</mass>
          <inertia>
            <ixx>0.01</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.01</iyy>
            <iyz>0</iyz>
            <izz>0.01</izz>
          </inertia>
        </inertial>
        <visual name="floor1_visual">
          <geometry>
            <box>
              <size>0.2 0.23 0.006</size>
            </box>
          </geometry>
          <material>
            <ambient>1.0 1.0 1.0 1</ambient>
            <diffuse>1.0 1.0 1.0 1</diffuse>
          </material>
        </visual>
        <collision name="floor1_collision">
          <geometry>
            <box>
              <size>0.2 0.23 0.006</size>
            </box>
          </geometry>
        </collision>
      </link>
      <joint name="floor1_joint" type="fixed">
        <parent>chassis</parent>
        <child>floor1</child>
      </joint>

      <!--
        floor2 - "второй этаж" (верхняя платформа),
        на высоте 0.195 над шасси.
      -->
      <link name="floor2">
        <pose relative_to="chassis">0 0 0.195 0 0 0</pose>
        <inertial>
          <mass>3</mass>
          <inertia>
            <ixx>0.02</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.02</iyy>
            <iyz>0</iyz>
            <izz>0.02</izz>
          </inertia>
        </inertial>
        <visual name="floor2_visual">
          <geometry>
            <box>
              <size>0.2 0.26 0.006</size>
            </box>
          </geometry>
          <material>
            <ambient>0.0 0.0 0.0 1</ambient>
            <diffuse>0.0 0.0 0.0 1</diffuse>
          </material>
        </visual>
        <collision name="floor2_collision">
          <geometry>
            <box>
              <size>0.2 0.16 0.006</size>
            </box>
          </geometry>
        </collision>
      </link>
      <joint name="floor2_joint" type="fixed">
        <parent>chassis</parent>
        <child>floor2</child>
      </joint>

<!-- Камера -->
    <link name="camera_link">
      <pose relative_to="floor2">0 0 0.03 0 0 0</pose>
      <inertial>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <visual name="camera_visual">
        <geometry>
          <cylinder>
            <radius>0.035</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>
      <collision name="camera_collision">
        <geometry>
          <cylinder>
            <radius>0.035</radius>
            <length>0.05</length>
          </cylinder>
        </geometry>
      </collision>
      
      <!-- Сенсор камеры -->
      <sensor name="camera_sensor" type="camera">
        <camera name="camera">
          <horizontal_fov>1.0472</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.05</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
      </sensor>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent>floor2</parent>
      <child>camera_link</child>
    </joint>
      <!--
        Ось вращения левого колеса (left_wheel_joint) - revolute.
        joint подключает parent=chassis, child=left_wheel.
      -->
      <joint name='left_wheel_joint' type='revolute'>
        <pose relative_to='left_wheel'/>
        <parent>chassis</parent>
        <child>left_wheel</child>
        <axis>
          <xyz expressed_in='__model__'>0 1 0</xyz>
          <limit>
            <lower>-1.79769e+308</lower>
            <upper>1.79769e+308</upper>
          </limit>
        </axis>
      </joint>

      <!--
        Аналогично для правого колеса (right_wheel_joint).
      -->
      <joint name='right_wheel_joint' type='revolute'>
        <pose relative_to='right_wheel'/>
        <parent>chassis</parent>
        <child>right_wheel</child>
        <axis>
          <xyz expressed_in='__model__'>0 1 0</xyz>
          <limit>
            <lower>-1.79769e+308</lower>
            <upper>1.79769e+308</upper>
          </limit>
        </axis>
      </joint>

      <!--
        Четыре стойки (cylinders) радиусом 0.005, 
        длиной 0.195, расположены по углам базы:
        (0.09, 0.09), (0.09, -0.09), (-0.09, 0.09), (-0.09, -0.09).
        Каждая с фиксированным joint.
      -->
      <!-- Передняя левая стойка -->
      <link name="rod_front_left">
        <pose relative_to="chassis">0.09 0.09 0.1 0 0 0</pose>
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>1e-5</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>1e-5</iyy>
            <iyz>0</iyz>
            <izz>1e-5</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
      <joint name="rod_front_left_joint" type="fixed">
        <parent>chassis</parent>
        <child>rod_front_left</child>
      </joint>

      <!-- Передняя правая стойка -->
      <link name="rod_front_right">
        <pose relative_to="chassis">0.09 -0.09 0.1 0 0 0</pose>
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>1e-5</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>1e-5</iyy>
            <iyz>0</iyz>
            <izz>1e-5</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
      <joint name="rod_front_right_joint" type="fixed">
        <parent>chassis</parent>
        <child>rod_front_right</child>
      </joint>

      <!-- Задняя левая стойка -->
      <link name="rod_rear_left">
        <pose relative_to="chassis">-0.09 0.09 0.1 0 0 0</pose>
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>1e-5</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>1e-5</iyy>
            <iyz>0</iyz>
            <izz>1e-5</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
      <joint name="rod_rear_left_joint" type="fixed">
        <parent>chassis</parent>
        <child>rod_rear_left</child>
      </joint>

      <!-- Задняя правая стойка -->
      <link name="rod_rear_right">
        <pose relative_to="chassis">-0.09 -0.09 0.1 0 0 0</pose>
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>1e-5</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>1e-5</iyy>
            <iyz>0</iyz>
            <izz>1e-5</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
            <specular>0.8 0.8 0.8 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <cylinder>
              <radius>0.005</radius>
              <length>0.195</length>
            </cylinder>
          </geometry>
        </collision>
      </link>
      <joint name="rod_rear_right_joint" type="fixed">
        <parent>chassis</parent>
        <child>rod_rear_right</child>
      </joint>

      <!--
        Соединение caster'а (задний шар) с шасси через шаровой joint (type='ball').
      -->
      <joint name='caster_wheel' type='ball'>
        <parent>chassis</parent>
        <child>caster</child>
      </joint>

      <!--
        DiffDrive плагин для управления колесами:
        - left_joint / right_joint — названия суставов
        - wheel_separation / wheel_radius — основные геом. параметры
        - topic='cmd_vel' — команда на движение
      -->
      <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>0.19</wheel_separation>
        <wheel_radius>0.032</wheel_radius>
        <odom_publish_frequency>1</odom_publish_frequency>
        <topic>cmd_vel</topic>
      </plugin>
    </model>
</sdf>
